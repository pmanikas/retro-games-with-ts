{
    "extends": "stylelint-config-standard",

    "rules": {
        "block-no-empty": null,
        "indentation": 4,
        "comment-empty-line-before": [
            "always",
            {
                "ignore": ["stylelint-commands", "after-comment"]
            }
        ],
        "max-empty-lines": 2,
        "unit-allowed-list": ["em", "rem", "%", "s", "px", "vh", "vw"]
    }
}
